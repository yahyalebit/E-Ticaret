@using ETicaretDataKatmanı.Entities;
@model IEnumerable<Order>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LeyoutAdmin.cshtml";
}

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">Orders</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a href="/Admin/Index">Admin</a></li>
                <li class="breadcrumb-item active">Orders</li>
            </ol>
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    DataTable Example
                </div>
                <div class="card-body">
                    <table id="datatablesSimple">
                        <thead>
                            <tr>
                                <th>Order Number</th>
                                <th>Order Date</th>
                                <th>Total Amount</th>
                                <th>User Name</th>
                                <th>Address</th>
                                <th>Is Approved</th>
                                <th>Action</th> <!-- Yeni Ekleme -->
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Order Number</th>
                                <th>Order Date</th>
                                <th>Total Amount</th>
                                <th>User Name</th>
                                <th>Address</th>
                                <th>Is Approved</th>
                                <th>Action</th> <!-- Yeni Ekleme -->
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.OrderNumber</td>
                                    <td>@item.OrderDate</td>
                                    <td>@item.TotalAmount</td>
                                    <td>@item.UserName</td>
                                    <td>@item.Address</td>
                                    <td>@item.IsApproved</td>
                                    <td>
                                        <!-- Buton ekliyoruz -->
                                        <form method="post" asp-action="ToggleApproval" asp-route-orderId="@item.OrderID">
                                            <button type="submit" class="btn btn-primary">
                                                @if (item.IsApproved)
                                                {
                                                    <text>Onayı Kaldır</text>
                                                }
                                                else
                                                {
                                                    <text>Onayla</text>
                                                }
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
</div>

