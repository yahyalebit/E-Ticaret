@using ETicaretDataKatmanı.Identity
@model IEnumerable<AppUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LeyoutAdmin.cshtml";
}


<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td class="text-center">
                    <!-- Delete Button -->
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" 
                       data-toggle="tooltip" data-placement="top" title="Delete this item">
                        <i class="fas fa-trash-alt"></i> Delete
                    </a>
                    
                    <!-- Role Assignment Button -->
                    <a asp-action="RoleAssign" asp-route-id="@item.Id" class="btn btn-info btn-sm ml-2" 
                       data-toggle="tooltip" data-placement="top" title="Assign roles to this user">
                        <i class="fas fa-user-tag"></i> Role Assignment
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        // Enable Bootstrap tooltips
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}
