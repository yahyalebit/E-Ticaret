@using ETicaretDataKatmanı.Entities;
@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LeyoutAdmin.cshtml";
}

<h2>Category List</h2>
<a asp-action="Create" class="btn btn-success">
    <i class="fa-solid fa-plus"></i> Add New Category
</a>
<br/>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
                <td>
                    <a href="@Url.Action("Details", "Category", new { id = category.CategoryId })" class="btn btn-info">Details</a>
                    <a href="@Url.Action("Edit", "Category", new { id = category.CategoryId })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", "Category", new { id = category.CategoryId })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

