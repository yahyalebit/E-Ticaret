@using ETicaretDataKatmanı.Entities
@model Category
@{
    ViewData["Title"] = "Yeni Kategori Oluştur";
    Layout = "~/Views/Shared/_LeyoutAdmin.cshtml";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            @* enctype dosya yüklemek istiyorsak kullanılır *@
            <form asp-action="Create" method="post" enctype="multipart/form-data" class="bg-light p-4 rounded shadow-sm">
                @* Model hatalarını göstermek için kullanılacak *@
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="CategoryName" class="control-label"></label>
                    <input asp-for="CategoryName" class="form-control" required placeholder="Kategori Adı" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Açıklama"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                @* CreateDate modelini kontrol etmek yerine opsiyonel alan olabilir *@
                <span asp-validation-for="CreateDate" class="text-danger"></span>

                <div class="form-group mt-3 text-center">
                    <input type="submit" value="Ekle" class="btn btn-primary w-100" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3 text-center">
        <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
    </div>
</div>

