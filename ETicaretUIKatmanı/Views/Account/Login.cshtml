@using ETicaretDataKatmanı.ViewModels
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: linear-gradient(to right, #6a11cb, #2575fc);
    }

    .login-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        height: calc(100vh - 100px);
    }

    .login-container {
        background: white;
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        width: 100%;
        max-width: 400px;
        text-align: center;
    }

        .login-container .form-control {
            border-radius: 25px;
        }

        .login-container button {
            border-radius: 25px;
            background-color: #2575fc;
            color: white;
            transition: 0.3s;
        }

            .login-container button:hover {
                background-color: #6a11cb;
            }
</style>

<div class="container login-wrapper">
    <div class="login-container">
        <h2 class="text-center mb-4">Giriş Yap</h2>
        <hr />
        <form method="post">
            <div class="mb-3 text-start">
                <label for="UserName" class="form-label">@Html.DisplayNameFor(m => m.UserName)</label>
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Kullanıcı adınızı girin" })
            </div>
            <div class="mb-3 text-start">
                <label for="Password" class="form-label">@Html.DisplayNameFor(m => m.Password)</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Şifrenizi girin" })
            </div>
            <div class="form-check mb-3 text-start">
                @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input" })
                <label class="form-check-label" for="RememberMe">@Html.DisplayNameFor(m => m.RememberMe)</label>
            </div>
            <div class="d-flex justify-content-between align-items-center">
                <a href="#" class="text-muted">Şifremi unuttum</a>
                <button type="submit" class="btn btn-primary px-4">Giriş Yap</button>
            </div>
        </form>
        <div class="text-center mt-3">
            <small>Hesabın yok mu? <a asp-action="Register" asp-controller="Account">Kayıt Ol</a></small>
        </div>
    </div>
</div>
